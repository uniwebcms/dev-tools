// component.scss - Component-specific styles using SASS

.{{componentName}} {
    margin: 2rem 0;
    
    // Base layout styles
    .layout-grid {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(var(--columns, 3), 1fr);
      
      // Responsive adjustments
      @media (max-width: 1024px) {
        grid-template-columns: repeat(min(var(--columns, 3), 2), 1fr);
      }
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
      }
    }
    
    .layout-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .layout-carousel {
      display: flex;
      overflow-x: auto;
      gap: 1.5rem;
      padding: 1rem 0;
      
      .item {
        min-width: 300px;
        flex-shrink: 0;
      }
    }
    
    // Emphasis variants
    &.emphasis-visual {
      .item-image {
        margin-bottom: 0.5rem;
      }
      
      .item-content {
        padding: 0.5rem;
      }
    }
    
    &.emphasis-textual {
      .item-image {
        display: none;
      }
      
      .item-content {
        padding: 1rem;
      }
    }
    
    &.emphasis-balanced {
      .item {
        display: flex;
        flex-direction: column;
      }
      
      .item-image {
        margin-bottom: 1rem;
      }
    }
    
    // Common item styling
    .item {
      border-radius: 8px;
      overflow: hidden;
      background-color: var(--item-bg, white);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s, box-shadow 0.2s;
      
      &:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      }
      
      &-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
        aspect-ratio: 16/9;
      }
      
      &-content {
        padding: 1rem;
        
        h3 {
          margin-top: 0;
          margin-bottom: 0.5rem;
        }
        
        p {
          margin-bottom: 1rem;
        }
        
        a {
          display: inline-block;
          padding: 0.5rem 1rem;
          background-color: var(--accent-color, #0070f3);
          color: white;
          text-decoration: none;
          border-radius: 4px;
          font-weight: 500;
          transition: background-color 0.2s;
          
          &:hover {
            background-color: var(--accent-hover, #0060d0);
          }
        }
      }
    }
  }